<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view"
    tools:deviceIds="wear"
    android:padding="@dimen/box_inset_layout_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding">

        <ImageView
            android:layout_width="416dp"
            android:layout_height="190dp"

            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/ada" />

        <TextView
            android:id="@+id/text"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:text="Novanda Ade Pratama"
            android:textColor="#E53935"
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            android:text="@string/perumahan_taman_janti"
            android:textColor="#E53935"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="149dp"
            android:layout_height="141dp"
            android:layout_marginHorizontal="125dp"
            android:layout_marginVertical="130dp"

            android:src="@drawable/bill"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="396dp"
            android:layout_height="95dp"
            android:layout_marginTop="255dp"
            android:orientation="horizontal"
            android:padding="8dp"/>

            <TextView
                    android:layout_width="105dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="280dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Apreciations"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="300dp"
                android:fontFamily="sans-serif-medium"
                android:text="9999"
                android:textColor="#000000"
                android:textSize="20dp" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="155dp"
                    android:layout_marginVertical="280dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Following"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginHorizontal="175dp"
                android:layout_marginVertical="300dp"
                android:fontFamily="sans-serif-medium"
                android:text="100"
                android:textColor="#000000"
                android:textSize="20dp" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="280dp"
                    android:layout_marginVertical="280dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Followers"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="300dp"
                android:layout_marginVertical="300dp"
                android:fontFamily="sans-serif-medium"
                android:text="250K"
                android:textColor="#000000"
                android:textSize="20dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="95dp"
            android:layout_marginTop="350dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/colorAccent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image2"
            android:layout_width="85dp"
            android:layout_height="98dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="347dp"

            android:src="@drawable/fb"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="306dp"
            android:layout_height="94dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="355dp"
            android:fontFamily="sans-serif-medium"
            android:text="Facebook"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="309dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="380dp"
            android:text="sebuah layanan jejaring sosial berkantor pusat di Menlo Park, California, Amerika Serikat yang diluncurkan pada bulan Februari 2004."
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="95dp"
            android:layout_marginTop="450dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/colorAccent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image3"
            android:layout_width="90dp"
            android:layout_height="98dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="447dp"

            android:src="@drawable/o"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="455dp"
            android:fontFamily="sans-serif-medium"
            android:text="OctaFX"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="309dp"
            android:layout_height="54dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="478dp"
            android:text="Octa Markets Incorporated adalah broker forex online. Ini menyediakan layanan di lebih dari 100 negara di seluruh dunia. "
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="550dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/colorAccent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image4"
            android:layout_width="90dp"
            android:layout_height="83dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="557dp"

            android:src="@drawable/twit"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="555dp"
            android:fontFamily="sans-serif-medium"
            android:text="Twitter"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView

            android:layout_width="309dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="578dp"
            android:text="Twitter adalah layanan mikroblog dan jejaring sosial Amerika di mana pengguna memposting dan berinteraksi dengan pesan yang dikenal sebagai Tweet"
            android:textColor="#000000" />

    </FrameLayout>

</LinearLayout>